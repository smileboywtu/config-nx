function pyfind() {  find . -type f *.py | xargs grep --color -n "$@"; }
function pyclean() {  find . -name *.pyc -print -delete "$@"; }
function pf() {  ps -ef | grep --color "$@"; }
function pycfind() {  find . -name *.pyc -print "$@"; }
function findiip() {  ss -ant | awk "{print $5}" | awk -F: "{print $1}" | sort | uniq -c | sort -k 1 -n -r; }
function findlf() {  find . -type f -size +100M -exec ls -l {} \; "$@"; }
function svndm() {  svn rm $( svn status | sed -e '/^!/!d' -e 's/^!//' ); }
function pslp() {  ps aux | sort -rnk 4; }
function df() {  /usr/bin/df -hT "$@" | column -t; }
